<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Icon_" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Height" Value="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"/>
        <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource Self}, Path=FontSize}"/>
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="FontFamily" Value="Entypo"/>
    </Style>

    <Style x:Key="IconPictures" TargetType="TextBlock" BasedOn="{StaticResource Icon_ }">
        <Setter Property="Text" Value="p"/>
    </Style>
</ResourceDictionary>